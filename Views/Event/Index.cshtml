@using Microsoft.AspNetCore.Identity
@inject UserManager<Teacher> UserManager

@{
    var isTeacher = User.IsInRole("Teacher");
}

@if (isTeacher)
{
    <a href="@Url.Action("Create", "Events")" class="btn btn-primary">Créer un événement</a>
}

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.Title</td>
                <td>@eventItem.Date</td>
                <td>
                    @if (isTeacher)
                    {
                        <a href="@Url.Action("Edit", "Events", new { id = eventItem.Id })" class="btn btn-warning">Modifier</a>
                        <a href="@Url.Action("Delete", "Events", new { id = eventItem.Id })" class="btn btn-danger">Supprimer</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
