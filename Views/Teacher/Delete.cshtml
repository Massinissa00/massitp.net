@model Teacher

<h1>Supprimer un enseignant</h1>

<p>Êtes-vous sûr de vouloir supprimer l'enseignant suivant ?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Prénom</dt>
        <dd class="col-sm-10">@Model.Firstname</dd>

        <dt class="col-sm-2">Nom</dt>
        <dd class="col-sm-10">@Model.Lastname</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Site Personnel</dt>
        <dd class="col-sm-10">@Model.PersonalWebSite</dd>
    </dl>
</div>

<form asp-action="Delete" asp-controller="Teacher" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Confirmer la suppression" class="btn btn-danger" />
    <a asp-action="Index" asp-controller="Teacher" class="btn btn-secondary">Annuler</a>
</form>
